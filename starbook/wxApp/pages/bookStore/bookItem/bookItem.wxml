
<!--pages/bookStore/bookItem/bookItem.wxml-->
<view class="border">
  <view class="contenter">
    <image src="{{bookItem.image}}"></image>
    <view class="bookInfo">
      <view class="bookName">书名：{{bookItem.bookTitle}}</view>
      <view class="author">作者：{{bookItem.author}}</view>
      <view class="publisher">出版社：{{bookItem.publisher}}</view>
    </view>
  </view>
</view>

<block wx:for="{{feel}}">
<view class="border">
  <view class="person">
    <image src="{{item.avatarUrl}}"></image>
    <view class="nickName">
      <text>{{item.nickName}}</text>
    </view>
    <text class="time">{{item.time}}</text>
  </view>
  <view class="feel">{{item.feel}}</view>
</view>
</block>






